<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ===============自定义主题换肤的自定义Theme主题文件====================  -->
    <!--目的是对特定的系统、自定义属性进行赋值操作。-->
    <!--通常格式是：
       name="自定义主题样式名称" parent="集成的主题：包括自定义主题样式和系统主题样式"
        <item name ="属性名称">对应的资源</item>-->




    <style name="Base.CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- API Level 22 编译要去点android -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--  避免黑色闪屏-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

<style name="Base.CustomTheme.Day">
    <item name="custom_attr_app_bg">@color/custom_color_app_bg_day</item>
    <item name="custom_attr_app_toolbar_bg">@color/custom_color_app_toolbar_bg_day</item>
    <item name="custom_attr_app_btn_bg">@color/custom_color_app_btn_bg_day</item>

</style>




    <style name="Base.CustomTheme.Night">
        <item name="custom_attr_app_bg">@color/custom_color_app_bg_night</item>
        <item name="custom_attr_app_toolbar_bg">@color/custom_color_app_toolbar_bg_night</item>
        <item name="custom_attr_app_btn_bg">@color/custom_color_app_btn_layout_bg_night</item>

    </style>




</resources>