<?xml version="1.0" encoding="utf-8"?>
<com.hxzk_bj_demo.widget.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_recycler_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgitem_photo_colleciton"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tvitem_entname_colleciton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:singleLine="false"
            android:textColor="?attr/custom_attr_app_textcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvitem_showtime_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="?attr/custom_attr_app_textcolor" />

            <TextView
                android:id="@+id/tvitem_entaddress_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvitem_showtime_collection"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="?attr/custom_attr_app_textcolor" />
        </LinearLayout>
