<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"

    >


<!--
transitionName :共享元素,activity跳转时用的



-->
<com.hxzk_bj_demo.widget.FourThreeImageView
    android:id="@+id/img_wechat_style"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:transitionName="@string/transition_wechat_img"
    android:layout_height="wrap_content"
    android:src="@drawable/morenimg"
    android:scaleType="centerCrop"/>

<TextView
    android:id="@+id/title_wechat_style2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/bg_text_wechat_item"
    android:ellipsize="end"
android:gravity="center"
    android:lines="2"
    android:layout_weight="1"
    android:textSize="12sp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="7dp"

    android:textColor="@android:color/white"/>


</LinearLayout>